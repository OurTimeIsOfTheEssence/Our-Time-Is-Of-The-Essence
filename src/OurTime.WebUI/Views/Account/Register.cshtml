@{
    ViewData["Title"] = "Registrera";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-sm" style="width:350px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Registrera nytt konto</h3>
            <form asp-action="Register" method="post">
                <div class="form-floating mb-3">
                    <input type="text" name="username" class="form-control" id="floatingUsername" placeholder="Användarnamn">
                    <label for="floatingUsername">Användarnamn</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Lösenord">
                    <label for="floatingPassword">Lösenord</label>
                </div>
                <button type="submit" class="btn btn-success w-100">Registrera</button>
            </form>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }
            <div class="text-center mt-3">
                <a asp-action="Login">Har du redan konto? Logga in →</a>
            </div>
        </div>
    </div>
</div>
