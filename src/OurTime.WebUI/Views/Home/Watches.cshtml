@{
    ViewData["Title"] = "Watches";
}

@section Styles {
    <link rel="stylesheet" href="~/css/watches.css" asp-append-version="true" />
}

<div class="section-content">
    <h2>OT Watches</h2>
    <p>Explore our exclusive watch models below.</p>
</div>

<main>
    <section class="products">
        <!-- Trailmaster -->
        <article class="product-card">
            <a asp-controller="Home" asp-action="Trailmaster">
                <img src="https://storageaccountblobb.blob.core.windows.net/images/Trailmaster%20A1.png" alt="OT Trailmaster" />
                <h3>OT Trailmaster</h3>
            </a>
            <p>Price: 49,999 SEK</p>
            <div class="button-group">
                <button class="info-button" onclick="location.href='@Url.Action("Trailmaster","Home")'">
                    More information
                </button>
                <!-- Skicka med `event` här också -->
                <button class="buy-now-button" onclick="addToCart(event, 'Trailmaster')">
                    Buy now
                </button>
            </div>
        </article>

        <!-- Lynx -->
        <article class="product-card">
            <a asp-controller="Home" asp-action="Lynx">
                <img src="https://storageaccountblobb.blob.core.windows.net/images/Lynx%20A1.png" alt="OT Lynx" />

                <h3>OT Lynx</h3>
            </a>
            <p>Price: 29,999 SEK</p>
            <div class="button-group">
                <button class="info-button" onclick="location.href='@Url.Action("Lynx","Home")'">
                    More information
                </button>

                                
                <button class="buy-now-button" onclick="addToCart(event, 'Lynx')">

                    Buy now
                </button>
            </div>
        </article>

        <!-- Trek -->
        <article class="product-card">
            <a asp-controller="Home" asp-action="Trek">
                <img src="https://storageaccountblobb.blob.core.windows.net/images/Trek%20A1.png" alt="OT Trek" />
                <h3>OT Trek</h3>
            </a>
            <p>Price: 39,999 SEK</p>
            <div class="button-group">
                <button class="toggle-info" onclick="toggleInfo('trek-info')">
                    More information
                </button>
                <button class="buy-now-button" onclick="addToCart(event, 'Trek')">
                    Buy now
                </button>
            </div>

            <!-- Dold beskrivning (visas med animation) -->
            <div id="trek-info" class="product-info"
                 style="max-height: 0; overflow: hidden; transition: max-height 0.4s ease;">
                <p><strong>Description:</strong> The OT Trek is an adventure watch designed for the modern explorer. With a durable case, water resistance, and a precision movement, it is the perfect companion for your outdoor adventures.</p>
                <p><strong>Features:</strong></p>
                <ul>
                    <li>Water Resistance: 100 meters (10 ATM)</li>
                    <li>Crystal: Scratch-resistant sapphire crystal</li>
                    <li>Case: Durable stainless steel case</li>
                    <li>Movement: Precision automatic movement</li>
                </ul>
            </div>
        </article>
    </section>
</main>

@section Scripts {
    <script src="~/js/cart.js" defer asp-append-version="true"></script>
}
