@model List<WatchViewModel>
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}

<div class="section-content">
    <h2>Time is of the Essence – wear it wisely</h2>
    <p>Explore our exclusive watches</p>
    <h3 class="new-arrivals">New Arrivals</h3>
</div>

<div class="swiper mySwiper">
    <div class="swiper-wrapper">
        @for (int i = 0; i < Model.Count; i++)
        {
            var watch = Model[i];
            var infoId = "info-" + i;
            <div class="swiper-slide">
                <article class="product-card index-product-card">
                    <img src="@watch.ImageUrl" alt="@watch.Name" />
                    <h3>@watch.Name</h3>
                    <p>Price: @watch.Price</p>
                    <div class="button-group">
                        <button type="button" onclick="toggleInfo('@infoId')">More information</button>
                        <button type="button" class="buy-now-button" onclick="addToCart(event, '@watch.Name')">Buy now</button>
                    </div>
                    <div id="@infoId" class="product-info" style="max-height:0; overflow:hidden; transition:max-height 0.4s ease;">
                        <p><strong>Description:</strong> @watch.Description</p>
                        @if (watch.Features != null && watch.Features.Any())
                        {
                            <ul>
                                @foreach (var feature in watch.Features)
                                {
                                    <li>@feature</li>
                                }
                            </ul>
                        }
                    </div>
                </article>
            </div>
        }
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>

    <script>
        const swiper = new Swiper(".mySwiper", {
            slidesPerView: 3,
            spaceBetween: 30,
            centeredSlides: true,
            loop: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev"
            }
        });

        function toggleInfo(id) {
            const panel = document.getElementById(id);
            panel.style.maxHeight = (panel.style.maxHeight && panel.style.maxHeight !== '0px') ? '0' : panel.scrollHeight + 'px';
        }
    </script>
}

